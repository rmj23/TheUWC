@model Source.Models.AStudentSelectionViewModel

@Html.HiddenFor(model => model.State)

<!-- Class Selection Field -->
<div class="form-group">
    <label class="col-sm-3 control-label" for="class">Class: </label>
    <div class="col-sm-6">
        
        @Html.DropDownListFor(model => model.CourseID, Model.CourseDropDown, new {@class = "form-control", onchange = "$('#State').val('CourseSelected');this.form.submit();"})
    
    </div>
</div>


<!-- Student Selection Field -->
<div class="form-group">
    <label class="col-sm-3 control-label" for="student">Student: </label>
    <div class="col-sm-6">
        
        @Html.DropDownListFor(model => model.StudentID, Model.StudentDropDown, new {@class = "form-control", onchange = "$('#State').val('StudentSelected');this.form.submit();"})
    
    </div>
</div>


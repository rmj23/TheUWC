@model Source.Models.ViewPortfolioViewModel
@{
    ViewBag.Title = "View Portfolio";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@section Styles {
    <!-- Page Styles -->
    <style type="text/css">
    .inactiveLink {
        cursor: default;
    }

  </style>


}

<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <div class="p-3 mb-2 bg-danger"></div>
    <h1 class="ml-1 ml-md-3">Portfolios</h1>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->
<!-- Main Content -->
<div id="">

    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h3 class="card-title">View Portfolio</h3>
                    <i data-toggle="tooltip" data-placement="right" class="fas fa-info-circle fa-md" title="Students identified by red papers have ungraded papers.  If you choose to select an optional Evaluation Month students with no papers uploaded for that month will be highlighted in yellow."></i>
                </div>
            </div>
            <div class="card-body">
                <!-- Academic Year Selection Field -->
                <div class="form-group row">
                    <label class="col-sm-3 control-label" for="academicYear">Academic Year: </label>
                    <div class="col-sm-6">
                        <select class="form-control" id="academicYearDropdown"></select>
                    </div>
                </div>
                <!-- Class Selection Field -->
                <div class="form-group row">
                    <label class="col-sm-3 control-label" for="class">Class: </label>
                    <div class="col-sm-6">
                        <select class="form-control" id="classDropdown">
                            <option value="-1">---</option>
                        </select>
                    </div>
                </div>
                <!-- Evaluation Month Field -->
                <div class="form-group row">
                    <label class="col-sm-3 control-label" for="class">
                        Evalution Month:
                        <i data-toggle="tooltip" data-placement="right" class="fas fa-info-circle fa-sm" title="Choose a month to highlight students that have not uploaded a paper for the given month."></i>
                    </label>
                    <div class="col-sm-6">
                        <select class="form-control" id="evalDropdown">
                            <option value="-1">---</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- table data -->
        <div id="TablePanel" class="card" style="display: none; margin-top: 20px;">
            <div class="card-header">
                <h3 class="card-title">Students</h3>
            </div>
            <div class="card-body">
                <table id="portfolioTable" class="table table-striped table-bordered dt-responsive" style="width: 100%;">
                    <!-- Roster Table Headings -->
                    <thead>
                        <tr>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Paper Title</th>
                            <th>Tasks</th>
                        </tr>
                    </thead>

                    @*<a href="@Url.Action("ViewPapers", "Evaluation", new {studentID = Student.StudentID, courseID = Model.CourseID, yearID = Model.YearID})" class="btn btn-sm btn-default" style="background-color: #be4916" title="View papers.">
                            <i class="fa fa-file-text-o"></i>
                        </a>

                        <a href="@Url.Action("ViewPapers", "Evaluation", new {studentID = Student.StudentID, courseID = Model.CourseID, yearID = Model.YearID})" class="btn btn-sm btn-default" style="background-color: #ebae26" title="View papers.">
                            <i class="fa fa-file-text-o"></i>
                        </a>

                        <a href="@Url.Action("ViewPapers", "Evaluation", new {studentID = Student.StudentID, courseID = Model.CourseID, yearID = Model.YearID})" class="btn btn-sm btn-default" title="View papers.">
                            <i class="fa fa-file-text-o"></i>
                        </a>


                        <a href="@Url.Action("ViewStudentGoals", "Instruction", new {State = Source.Models.ACourseStudentYearSelectionListViewModel.CourseStudentYearSelectionListState.StudentSelected, YearID = Model.YearID, CourseID = Model.CourseID, StudentID = Student.StudentID})" class="btn btn-sm btn-default" title="View goals.">
                            <i class="fa fa-bullseye"></i>
                        </a>
                        <a href="@Url.Action("ViewPaperHistory", "Evaluation", new {studentID = Student.StudentID, courseID = Model.CourseID, yearID = Model.YearID})" class="btn btn-sm btn-default" title="View history.">
                            <i class="fa fa-folder"></i>
                        </a>
                        <a href="@Url.Action("ConferenceNotes", "Instruction", new {State = Source.Models.ACourseStudentYearSelectionListViewModel.CourseStudentYearSelectionListState.StudentSelected, YearID = Model.YearID, CourseID = Model.CourseID, StudentID = Student.StudentID})" class="btn btn-sm btn-default" title="View conference notes.">
                            <i class="fa fa-pencil"></i>
                        </a>*@
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <!-- Page Scripts -->
    <script src="~/Scripts/Teacher/ViewPortfolio.js"></script>
    
}


@model Source.Models.EditClassModel

@{
    ViewBag.Title = "EditClass";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="p-3 mb-2 bg-info"></div>
<h1 class="ml-md-3 ml-1">Edit Class</h1>

@using (Html.BeginForm("EditClass", "Settings", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Editing: @ViewBag.CourseTitle</h4>
            </div>

            <div class="mt-3">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.CourseID)

                <div class="card-body">
                    <div class="row mb-2">
                        <label class="col-sm-3 control-label" for="grade">Grade: </label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(m => m.SelectedGradeID, Model.GradeDropDown, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- Academic Year Field -->
                    <div class="row mb-2">
                        <label class="col-sm-3 control-label" for="academicYear">Academic Year: </label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(x => x.SelectedYearID, Model.YearDropDown, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- Semester Field -->
                    <div class="row mb-2">
                        <label class="col-sm-3 control-label" for="semester">Length of Course: </label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(x => x.SelectedCourseID, Model.CourseDropDown, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- Subject Field-->
                    <div class="row mb-2">
                        <label class="col-sm-3 control-label" for="subject">Subject: </label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(x => x.SelectedSubjectID, Model.SubjectDropdown, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- Block/Period Field -->
                    <div class="row">
                        <label class="col-sm-3 control-label" for="blockPeriod">Block/Period: </label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(x => x.SelectedPeriodID, Model.PeriodDropdown, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-outline-primary" onclick="return confirm('Are you sure you want to edit this class?')" />

                        <button class="btn btn-outline-secondary" onclick="window.history.back(); return false">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/Teacher/EditClass.js"></script>
}

@section RenderBlockingScripts {


}

<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <h1 class="page-header text-overflow">Resources</h1>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->
<!-- Main Content -->
<div id="page-content">
    <div class="container-fluid">

        <!-- Selections Panel -->
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @ViewBag.Title
                    <i class="fa fa-info fa-rounded add-tooltip text-muted" data-toggle="tooltip" data-container="body" data-placement="bottom" data-original-title="Make sure your pop-up blocker is turned off."></i>
                </h3>
            </div>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="panel-body">

                    <!-- Graphic Organizer Type Field -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="graphicOrganizerType">Graphic Organizer Type: </label>
                        <div class="col-sm-6">
                            <select class="form-control" id="graphicOrganizerType" onchange="change(graphicOrganizerType.options[graphicOrganizerType.selectedIndex].value)">
                                <option>-- Select an Option --</option>
                                <option value="a">Argumentative</option>
                                <option value="i">Informational</option>
                                <option value="n">Narrative</option>
                            </select>
                        </div>
                    </div>

                    <!-- Graphic Organizer Class Field -->
                    <div class="form-group hidden" id="graphicOrganizerClassContainer">
                        <label class="col-sm-3 control-label" for="graphicOrganizerClass">Graphic Organizer Genre: </label>
                        <div class="col-sm-6">
                            <select class="form-control" id="graphicOrganizerClass" onchange="change2(graphicOrganizerClass.options[graphicOrganizerClass.selectedIndex].value)">
                                <option>-- Select an Option --</option>
                                <option value="d">Description</option>
                                <option value="e">Explanation</option>
                                <option value="p">Procedure</option>
                                <option value="rec">Recount</option>
                                <option value="rep">Report</option>
                            </select>
                        </div>
                    </div>

                    <!-- Graphic Organizer Level Field -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="graphicOrganizerClass">Graphic Organizer Level: </label>
                        <div class="col-sm-6">
                            <select class="form-control" id="graphicOrganizerLevel" onchange="show(graphicOrganizerLevel.options[graphicOrganizerLevel.selectedIndex].value)">
                                <option>-- Select an Option --</option>
                            </select>
                        </div>
                    </div>

                </div>
            }

        </div>

        <!-- Class Records Panel -->
        <div class="panel">

            <!-- Panel Heading -->
            <div class="panel-heading">
                <div class="panel-control">

                    @*<a href="javascript:void(0);" onclick="alert('Feature coming soon!');" class="btn btn-blueTradewind">
                            <i class="fa fa-envelope-o"></i>
                        </a>*@

                </div>
                <h3 class="panel-title">
                    @ViewBag.Title
                </h3>
            </div>

            <!-- Panel Body -->
            <div class="panel-body">

                <iframe src="" id="pdfviewer" class="hidden" style="width:100%; min-height:650px;" allowfullscreen webkitallowfullscreen></iframe>

            </div>
        </div>

    </div>
</div>



        function change(value) {
            $('#graphicOrganizerLevel').find('option').remove();
            $('#graphicOrganizerLevel').append('<option>-- Select an Option --</option>');
            if (value == "i") {
                $('#graphicOrganizerClassContainer').removeClass('hidden');
            }
            else {
                $('#graphicOrganizerClassContainer').addClass('hidden');
                for (var i = 0; i < data.length; i++) {
                    if (data[i].set == value) {
                        $('#graphicOrganizerLevel').append('<option value="' + data[i].value + '">' + data[i].text + '</option>');
                    }
                }
            }
        }
        function show(value) {

            if ($("#pdfviewer").hasClass("hidden")) {
                $("#pdfviewer").removeClass("hidden");
            }
            $('#pdfviewer').prop('src', value);
        }
        function change2(value) {
            $('#graphicOrganizerLevel').find('option').remove();
            $('#graphicOrganizerLevel').append('<option>-- Select an Option --</option>');
            for (var i = 0; i < data.length; i++) {
                if (data[i].set == value) {

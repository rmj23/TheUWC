                                <a class="btn btn-primary" href="@Url.Action("Settings", "Teacher")">
                                    <i class="fas fa-cog fa-md"></i>&nbsp; Settings
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Logout", "Authentication")">
                                    <i class="fas fa-sign-out-alt fa-md"></i>&nbsp; Logout
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>

@model Source.Models.PasswordUpdateModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Change Password</h4>
</div>
@using (Html.BeginForm("ChangePassword", "WebAdmin", FormMethod.Post))
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>
            @Html.HiddenFor(model => model.Username)
            <dt>
                @Html.DisplayNameFor(model => model.NewPassword)
            </dt>
            <dd>
                @Html.PasswordFor(model => model.NewPassword)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </dt>
            <dd>
                @Html.PasswordFor(model => model.ConfirmPassword)
            </dd>
        </dl>

    </div>
    <div class="modal-footer">
        <!-- Submit Button -->
        <div class="form-group text-center">
            <button type="submit" class="btn btn-default">Change</button>
        </div>
    </div>
}

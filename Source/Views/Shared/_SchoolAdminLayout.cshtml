                                <div class="btn-group-justified">
                                    <button class="btn btn-primary" onclick="window.location.href = '@Url.Action("Settings", "SchoolAdmin")';">
                                        <i class="fas fa-cog"></i> Settings
                                    </button>
                                    <button class="btn btn-danger" onclick="window.location.href = '@Url.Action("Logout", "Authentication")'">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
        <div id="" class="mainContent">
            <div>
                @RenderBody()

        <!-- top navigation-->
        <div class="content">
            <nav class="navbar navbar-expand fixed-top">
                <div class="form-inline">
                    <button class="btn btn-sm btn-outline-secondary mr-1" type="button" id="sidebarCollapse">
                        <i class="fas fa-align-justify fa-lg"></i>
                    </button>
                    <span style="color: grey;" class="my-auto mr-1">
                        <i class="fas fa-ellipsis-v fa-sm"></i>
                    </span>
                    <a class="navbar-brand mb-1" href="@Url.Action("Index", "Home")" target="_blank">
                        <img src="~/Images/logo.png" alt="Uni-Spire Logo" class="navbar-logo" />
                    </a>
                </div>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user fa-lg"></i>  @Convert.ToString(Session["UserFirstName"] + " " + Session["UserLastName"])
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-id-badge fa-sm col-xs"></i>
                                <span class="col-sm-1">Profile</span>
                            </a>

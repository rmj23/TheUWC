    <script src="~/Scripts/Shared/sideBarNav.js"></script>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="welcomeUserHeader">
                <h5 class="my-auto">Hello @Convert.ToString(Session["UserFirstName"] + " " + Session["UserLastName"])!</h5>
            </div>
            <ul class="list-unstyled components">
                <!--Menu list item-->
                <li class="active-link">
                    <a href="@Url.Action("Dashboard", "SchoolAdmin")">
                        <i class="fa fa-home"></i>
                        <span class="menu-title">
                            <strong>Dashboard</strong>
                        </span>
                    </a>
                </li>
                <!--Category name-->
                <li class="list-header extra-pad">Management</li>
                <!--Menu list item Manage-->
                <li class="extra-pad">
                    <a href="#ManageMenu" onclick="$('#ManageMenu').toggleClass('collapse')" data-togle="collapse" aria-expanded="false" class="sideNavLinks" id="manageMenu">
                        <i class="fa fa-circle" style="color:#6ca9b0"></i>
                        <span class="menu-title">School Management</span>
                        <i class="fas fa-chevron-down fa-sm customArrow"></i>
                    </a>
                    <ul class="collapse list-unstyled" id="ManageMenu">
                        <li class="dropDownLinks">
                            <a href="@Url.Action("DistrictRoster","SchoolAdmin")">District Roster</a>
                        </li>
                        <li class="dropDownLinks">
                            <a href="@Url.Action("CourseSemester", "SchoolAdmin")">Midterm Dates</a>
                        </li>
                    </ul>
                </li>

                <!--Menu list item Reporting-->
                <li class="extra-pad">
                    <a href="#ReportingMenu" onclick="$('#ReportingMenu').toggleClass('collapse')" data-togle="collapse" aria-expanded="false" class="sideNavLinks" id="reportingMenu">
                        <i class="fa fa-circle" style="color:#ebae26"></i>
                        <span class="menu-title">Reporting</span>
                        <i class="fas fa-chevron-down fa-sm customArrow"></i>
                    </a>

                    <!--Submenu-->
                    <ul class="collapse list-unstyled" id="ReportingMenu" aria-expanded="false">
                        <li class="dropDownLinks">
                            <a href="@Url.Action("BenchmarkReports","SchoolAdmin")">Monthly Benchmarks</a>
                        </li>
                        <li class="dropDownLinks"><a href="@Url.Action("YearlyBenchmarkReports","SchoolAdmin")">Yearly Benchmarks</a></li>
                        <li class="dropDownLinks"><a href="@Url.Action("UsageReports","SchoolAdmin")">Teacher Usage</a></li>

                    </ul>
                </li>

                <!--Menu list item Resources-->
                <li class="extra-pad">
                    <a href="#ResourcesMenu" onclick="$('#ResourcesMenu').toggleClass('collapse')" data-togle="collapse" aria-expanded="false" class="sideNavLinks" id="resourcesMenu">
                        <i class="fa fa-circle" style="color:#1d5f8b "></i>
                        <span class="menu-title">Resources</span>
                        <i class="fas fa-chevron-down fa-sm customArrow"></i>
                    </a>

                    <!--Submenu-->
                    <ul class="collapse list-unstyled" aria-expanded="false" id="ResourcesMenu">
                        <li class="dropDownLinks"><a href="@Url.Action("Leveling Chart.Month by Month Expectation of Proficiency for Each Grade Level.pdf","Content/SchoolAdmin")" target="_blank">Levels Explained</a></li>
                        <li class="dropDownLinks"><a href="@Url.Action("Alignment OF THE UNIVERSAL WRITING CONTINUUM AND THE COMMON CORE STATE STANDARDS copy.pdf","Content/SchoolAdmin")" target="_blank">Universal Writing Continuum Alignment to the CCSS</a></li>
                        <li class="dropDownLinks"><a href="@Url.Action("Frequently Asked Questions 2.pdf","Content/SchoolAdmin")" target="_blank">Frequently Asked Questions</a></li>
                        <li class="dropDownLinks"><a href="@Url.Action("Best Practices.pdf","Content/SchoolAdmin")" target="_blank">Best Practices</a></li>
                        <li class="dropDownLinks"><a href="@Url.Action("Creating Great Writers.pdf","Content/SchoolAdmin")" target="_blank">Creating Great Writers</a></li>
                        <li class="dropDownLinks"><a href="@Url.Action("Research Reviewed for UWC.pdf","Content/SchoolAdmin")" target="_blank">Research Basis for UWC</a></li>

                    </ul>
                </li>

                @*<!--Menu list item - Hidden for future use -->

@model Source.Models.CourseSemesterViewModel
@{
    ViewBag.Title = "EditMidtermDates";
    Layout = "~/Views/Shared/_SchoolAdminLayout.cshtml";
}

<div id="page-content">
    <div class="container-fluid">
        @using (Html.BeginForm("EditMidtermDates", "SchoolAdmin", FormMethod.Post))
        {
            <div class="card">
                <div class="card-header">
                    <h3>Edit Midterm Date</h3>
                </div>
                <div class="card-body">
                    @Html.HiddenFor(m => m.CourseSemesterModel.ID)
                    <!-- Subject Selection Field -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="subjectSelection"> Select Subject:</label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(model => Model.CourseSemesterModel.SubjectID, Model.SubjectDropDown, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- Semester Selection Field -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="semesterSelection">Select Semester:</label>
                        <div class="col-sm-6">
                            @Html.DropDownListFor(model => Model.CourseSemesterModel.SemesterID, Model.SemesterDropDown, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- Date Selection Field -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="dateSelection">Enter Date:</label>
                        <div class="col-sm-6">
                            <div class="date">
                                @Html.EditorFor(model => Model.CourseSemesterModel.MidtermDate, new { @class = "datepicker form-control", @Value = Model.CourseSemesterModel.MidtermDate, @text = Model.CourseSemesterModel.MidtermDate })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        var date = $("#CourseSemesterModel_MidtermDate").val();
        if (date === null || date === "") {
            $('.datepicker').datepicker().datepicker('setDate', new Date());
        }
        else {
            $('.datepicker').datepicker().datepicker('setDate', Date.parse(date));
        }
    });
</script>


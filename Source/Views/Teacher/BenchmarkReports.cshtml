@model Source.Models.ViewBenchmarkReportsViewModel
@{
    ViewBag.Title = "Benchmark Reports";
    Layout = ViewBag.Layout;
}

@{
    string[] Evaluations = new string[5]
        {
        "Below Basic",
        "Basic",
        "Proficient",
        "Advanced",
        "Advanced+"
                        };

    string[] EvaluationPanelStyleClass = new string[5]
    {
        "panel-orangeRoughy",
        "panel-yellowFuel",
        "panel-greenJewel",
        "panel-blueTradewind",
        "panel-blueBluemine"
                    };

    int[] GraphData = new int[5] { 0, 0, 0, 0, 0 };
}

@section Styles {

    <!-- Page Styles -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.css" rel="stylesheet" type="text/css" />
}

<!-- Page Title -->
<div id="page-title">
    <div class="p-3 mb-2 bg-warning"></div>
    <h1 class="ml-1 ml-md-3">Benchmark Reports</h1>
</div>

<!-- Main Content -->
<div id="page-content">
    <div class="container">

        <!-- Controls -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Benchmark Reports</h3>
            </div>

            <!--Horizontal Form-->
            <!--===================================================-->

            <div class="card-body">



                @Html.Partial("_EvaluationPeriodCourseSelection")



            </div>

            <!--===================================================-->
            <!--End Horizontal Form-->

        </div>
        <div id="contentPanel" style="margin-top: 20px; display: none;">
            <div class="card">
                <div class="card-header panel-orangeRoughy">
                    <h3 class="card-title">Below Basic</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" id="1">
                        <li class="list-group-item text-danger" id="placeholder1">No Students Found</li>
                    </ul>
                </div>
            </div>
            <div class="card" style="margin-top: 20px;">
                <div class="card-header panel-yellowFuel">
                    <h3 class="card-title">Basic</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" id="2">
                        <li class="list-group-item text-danger" id="placeholder2">No Students Found</li>
                    </ul>
                </div>
            </div>
            <div class="card" style="margin-top: 20px;">
                <div class="card-header panel-greenJewel">
                    <h3 class="card-title">Proficient</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" id="3">
                        <li class="list-group-item text-danger" id="placeholder3">No Students Found</li>
                    </ul>
                </div>
            </div>
            <div class="card" style="margin-top: 20px;">
                <div class="card-header panel-blueTradewind">
                    <h3 class="card-title">Advanced</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" id="4">
                        <li class="list-group-item text-danger" id="placeholder4">No Students Found</li>
                    </ul>
                </div>
            </div>
            <div class="card" style="margin-top: 20px;">
                <div class="card-header panel-blueBluemine">
                    <h3 class="card-title">Advanced +</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush" id="5">
                        <li class="list-group-item text-danger" id="placeholder5">No Students Found</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card" style="margin-top: 20px; display: none;" id="ChartPanel">
            <div class="card-header">
                <h3 class="card-title">Class At A Glance</h3>
            </div>
            <div class="card-body">
                <canvas id="ClassChart" style="height: 250px !important;"></canvas>
            </div>
        </div>

    </div>
</div>
@section Scripts {

    <!-- Page Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script src="~/Scripts/Teacher/EvalPeriodCourseSelection.js"></script>
    <script src="~/Scripts/Teacher/BenchmarkReportsChart.js"></script>
}
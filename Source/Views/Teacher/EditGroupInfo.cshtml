@model Source.Models.EditGroupInfoViewModel
@{
    /**/

    ViewBag.Title = "AddGroupTitle";
    Layout = ViewBag.Layout;
}
@using (Html.BeginForm("EditGroupInfo", "Teacher", FormMethod.Post))
{
    @Html.HiddenFor(m => Model.group.projectId)
    @Html.HiddenFor(m => Model.group.groupId)
    <div class="page-contnet">
        <div class="container-fluid">
            <div class="panel">
                <div class="panel-heading">
                    <h6 class="panel-title">Students in Selected Group</h6>
                </div>
                <section class="form-horizontal">
                    <div class="panel-body">
                        <table class="table table-bordered table-hover toggle-circle" data-page-size="10">
                            <thead>
                                <tr>
                                    <th data-sort-initial="true">Last Name</th>
                                    <th>First Name</th>
                                    <th data-sort-ignore="true">Middle Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model.studentsInGroup)
                                {
                                    <tr>
                                        <td>@student.LastName</td>
                                        <td>@student.FirstName</td>
                                        <td>@student.MiddleName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                     
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Project Subtitle:</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.group.projectSubtitle, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="form-group text-center">
                            <button type="submit" name="submit" class="btn btn-default">Done</button>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


}

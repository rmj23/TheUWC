@model Source.Models.ParentStudentAccountsViewModel
@{
    ViewBag.Title = "Parent and Student Accounts";
    Layout = ViewBag.Layout;
}

@section Styles {

    <!-- Page Styles -->
}


<!-- Page Title -->
<div id="page-title">
    <div class="p-3 mb-2 bg-info"></div>
    <h1 class="ml-1 ml-md-3">@ViewBag.Title</h1>
</div>

<!-- Main Content -->
<div id="page-content">
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Course Selection</h4>
            </div>

            <!--Horizontal Form-->
            <!--===================================================-->
            <div class="card-body">

                @Html.Partial("_YearCourseSelection")

            </div>
            <!--===================================================-->
            <!--End Horizontal Form-->

        </div>
        <!-- Parent and Student Accounts Table -->
        <div class="card" id="AccountsPanel" style="display: none; margin-top: 20px; ">
            <div class="card-header">
                <div>
                    <h4 class="card-title">Students</h4>
                </div>
            </div>
            <div class="card-body">

                <!-- Student Portfolio Table -->
                <table id="AccountsTable" style="width: 100%;" class="table table-striped table-bordered dt-responsive">

                    <!-- Table Headings -->
                    <thead>
                        <tr>
                            <th>Last Name</th>
                            <th>Middle Name</th>
                            <th>First Name</th>
                            <th>Suffix</th>
                            <th>Student Number</th>
                            <th>Accounts</th>
                        </tr>
                    </thead>

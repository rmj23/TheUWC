@model Source.Models.UploadLessonPlanViewModel
@{
    ViewBag.Title = "Upload Lesson Plan";
    Layout = ViewBag.Layout;
}

@section Styles{}
<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <h1 class="page-header text-overflow">Upload Lesson Plan</h1>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->
<!-- Main Content -->




    @using (Html.BeginForm("UploadLessonPlan", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        <section class="form-horizontal">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="ddlCourse">Select Course: </label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(model => model.CourseID, Model.CourseDropDown, new { @class = "form-control" })
                    </div>
                </div>
                <!--Lesson Plan Title Field-->
                <div class="form-group">
                    <label class="col-sm-3 control-label">Lesson Plan Title: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.LessonPlan.LessonPlanTitle, new { @class = "form-control" })
                    </div>
                </div>
                <!--Upload Lesson Plan Field-->
                <div class="form-group">
                    <label class="col-sm-3 control-label">File Input: </label>
                    <div class="col-sm-6">
                        <span class="pull-left btn btn-primary btn-file">
                            Browse... <input type="file" name="file" accept="application/pdf">
                        </span>
                    </div>

                </div>
                <div class="panel-footer">
                    <!-- Submit Button -->
                    <div class="form-group text-center">
                        <button type="submit" name="submit" class="btn btn-default">Upload Lesson Plan</button>
                    </div>
                </div>
            </div>
        </section>

    }
}


            


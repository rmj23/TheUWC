@model Source.Models.ClassDataChartViewModel
@{
    ViewBag.Title = "ClassDataChart";
    Layout = ViewBag.Layout;
}

<h2>ClassDataChart</h2>

<table>
    @for (int i = 0; i < Model.WritingElements.Count; i++)
    {
        <tr>
            @for (int j = 0; j < Model.ProficiencyTypes.Count; j++)
            {
                <td>
                    @Model.ProficiencyTypes[j].ProficiencyType
                </td>
            }
        </tr>
        <tr>
            @for (int j = 0; j < Model.ProficiencyTypes.Count; j++)
            {
                <td>
                    @foreach (string s in Model.ReportElements[Model.GetReportElementIndex(i, j)])
                    {
                        <span>@s</span>
                        <br />
                    }
                </td>
            }
        </tr>
    }
</table>
                                <td>
                                    @Html.TextAreaFor(model => model.ExplainDesc, new { @class = "form-control", @readonly = "readonly", @style = "resize: none;" })
                                </td>
                            </tr>

                            <!-- Apply -->
                            <tr>
                                <td>
                                    Apply
                                </td>
                                <td>
                                    @Html.TextAreaFor(model => model.ApplyDesc, new { @class = "form-control", @readonly = "readonly", @style = "resize: none;" })
                                </td>
                            </tr>

                            <!-- Share -->
                            <tr>
                                <td>
                                    Share
                                </td>
                                <td>
                                    @Html.TextAreaFor(model => model.ShareDesc, new { @class = "form-control", @readonly = "readonly", @style = "resize: none;" })
                                </td>
                            </tr>

                        </tbody>

                    </table>

                </div>

                        </div>
                    </div>

                    <!-- Lesson Plan Record Table -->
                    <table id="tableLessonPlan" class="table table-bordered table-hover toggle-circle" data-page-size="10">

                        <!-- Table Headings -->
                        <thead>
                            <tr>
                                <th style="width: 30%;">Learning Cycle</th>
                                <th data-sort-ignore="true" style="width: 70%;">My Plan</th>
                            </tr>
                        </thead>

                       <!-- Table Content -->
                        <tbody>

                            <!-- Engage -->

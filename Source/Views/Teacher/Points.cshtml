                    <h2>Current Total</h2>
                    <div>@Source.Models.SessionModel.GetUserPoints(HttpContext.Current.Request.RequestContext)</div>
                    <h3>This Month's Goal</h3>
                    <div>@Source.Models.UserPointsModelDb.SelectRequiredPoints()</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Teacher Progress -->

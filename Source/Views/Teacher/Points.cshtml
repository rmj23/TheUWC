<!-- Main Content -->
<div id="page-content">

    <!-- Information Panel -->
    <div class="row">
        <div class="col-xs-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Teacher Points</h3>
                </div>
                <div class="panel-body">

                    <!--Paragraph-->
                    <!--===================================================-->
                    <p class="text-main text-semibold">My Points</p>
                    <p>
                        Your dedication to improving students' writing is important to us.
                        As you use the Universal Writing Continuum, you are accumulating points.
                        At the end of each month, all teachers that achieve the required number of
                        points are entered into a random drawing for a <strong>$100 grant for your classroom</strong>.
                        Really, no kidding! <small>You may only win once in a calendar year</small>.
                    </p>
                    <!--===================================================-->

                </div>
            </div>
        </div>
    </div>

    <!-- Teacher Progress -->
    <div class="row">
        <div class="col-xs-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Your Progress</h3>
                </div>
                <div class="panel-body">

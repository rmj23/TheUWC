@model Source.Models.ViewClassGoalsViewModel
@{
    ViewBag.Title = "Class Goals";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@section Styles {

}
<!-- Page Title -->
<div id="page-title">
    <div class="p-3 mb-2 bg-success"></div>
    <h1 class="ml-1 ml-md-3">@ViewBag.Title</h1>
</div>

<!-- Main Content -->
<div id="page-content">
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
            </div>
            <!--Horizontal Form-->
            <!--===================================================-->
            <div class="card-body">
                @Html.Partial("_CourseSelection")
            </div>
            <!--===================================================-->
            <!--End Horizontal Form-->
        </div>


        <!-- Class Goals Panel -->
        <div class="card" style="margin-top: 20px; display: none;" id="classGoalsPanel">

            <!-- Panel Heading -->
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h3 class="card-title">
                            @ViewBag.Title Records
                        </h3>
                    </div>
                    <div class="col">
                        <div class="float-right btn-group-justified">
                            <!-- Print Class Goals Button -->
                            <button id="printClassGoalsBtn" class="mb-1 mb-md-0 btn btn-greenJewel">Print Class Goals</button>
                            <!-- Add Goal Button -->
                            <a href="@Url.Action("InsertClassGoals", "Instruction")" class="btn btn-greenJewel">Add Goal</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel Body -->
            <div class="card-body">

                <!-- Class Goals Table -->
                <table id="tableClassGoals" class="table table-striped table-bordered dt-responsive" style="width: 100%;">

                    <!-- Table Headings -->
                    <thead>
                        <tr>
                            <th>Writing Element</th>
                            <th>Goal</th>
                            <th>Date Assigned</th>
                            <th>Deadline</th>
                            <th>Date Completed</th>
                            <th>Tasks</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="~/Scripts/Teacher/ViewClassGoals.js"></script>
}
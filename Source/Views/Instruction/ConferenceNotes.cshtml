@{
    ViewBag.Title = "ConferenceNotes";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@section Styles {

}

<!-- Page Title -->
<div id="page-title">
    <div class="p-3 mb-2 bg-success"></div>
    <h1 class="ml-1 ml-md-3">Conference Notes</h1>
</div>

<!-- Main Content -->
<div id="page-content">
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Student Selection</h3>
            </div>
            <!--Horizontal Form-->
            <!--===================================================-->
            <div class="card-body">
                @Html.Partial("_StudentCourseYearSelection")
            </div>
            <!--===================================================-->
            <!--End Horizontal Form-->
        </div>

        <!-- Student Goals Panel -->
        <div class="card" style="display: none; margin-top: 20px;" id="studentGoalsPanel">
            

            <!-- Panel Heading -->
            <div class="card-header">
                <h3 class="card-title float-left">Conference Notes Records</h3>
                <div class="btn-group-justified float-right">
                    <!-- Print Conference Notes -->
                    <a id="PrintBtn" class="btn btn-greenJewel mb-1 mb-md-0" href="#" role="button">Print Conference Notes</a>
                    @*<a href="@Url.Action("PrintConferenceNotes", "Instruction", new { courseID = Model.CourseID, studentID = Model.StudentID })" class="btn btn-greenJewel">Print Conference Notes</a>*@

                    <!-- Add Conference Notes Button -->
                    <a  id="AddBtn" class="btn btn-greenJewel" href="#" role="button">Add Conference Notes</a>
                    @*@Html.ActionLink("Add Conference Notes", "InsertConferenceNotes", "Instruction", new { YearID = Model.YearID, CourseID = Model.CourseID, StudentID = Model.StudentID }, new { @class = "btn btn-greenJewel" })*@

                </div>
            </div>

            <!-- Panel Body -->
            <div class="card-body">

                <!-- Conference Notes Table -->
                <table id="tableConferenceNotes" style="width: 100%;" class="table table-bordered table-striped dt-responsive">

                    <!-- Table Headings -->
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Conference Type</th>
                            <th>Stage/Draft</th>
                            <th>Comments</th>
                            <th>Tasks</th>
                        </tr>
                    </thead>

                </table>

            </div>
        </div>


    </div>
</div>
@section Scripts {
    <!-- Moment JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="~/Scripts/Teacher/StudentCourseSelection.js"></script>
    <script src="~/Scripts/Teacher/ConferenceNotes.js"></script>
}
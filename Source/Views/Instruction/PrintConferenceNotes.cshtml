@model IEnumerable<Source.Models.ConferenceNotesModel>

@{
    Layout = null;

}
    <head>
        <!-- Bootstrap -->
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
@if (Model != null)
{
    <div class="container" style="margin-bottom: 1%;">
        <h1>@Model.FirstOrDefault().firstName @Model.FirstOrDefault().lastName's Conference Notes</h1>
    </div>
    <div class="container">
        <table class="table">
            <tr>
                <th>Date</th>
                <th>Conference Type</th>
                <th>Stage/Draft</th>
                <th>Comments</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString().Substring(0, 10)</td>
                    <td>@item.Description</td>
                    <td>@item.StageOrDraft</td>
                    <td>@item.Comments</td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <p>No Conference Notes for this Student</p>
}
@model Source.Models.EditClassGoalsViewModel
@{
    ViewBag.Title = "Edit Class Goals";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
@section Styles {

}

<!-- Page Title -->
<div id="page-title">
    <div class="p-3 mb-2 bg-success"></div>
    <h1 class="page-header text-overflow">Class Goals</h1>
</div>
<!-- Main Content -->
<div id="page-content">
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
            </div>
            <!--Horizontal Form-->
            <!--===================================================-->
            @using (Html.BeginForm("EditClassGoals", "Instruction", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.ClassGoals.ID)
                @Html.HiddenFor(model => model.ClassGoals.CourseID)

                <section class="form-horizontal">
                    <div class="card-body">

                        <!--Writing Element Field -->
                        <div class="form-group row">
                            <label class="col-sm-3 control-label">Writing Element: </label>
                            <div class="col-sm-7">
                                <p class="form-control"> @Model.ClassGoals.ShortDescription</p>
                            </div>
                        </div>

                        <!--Goal Field EDITABLE -->
                        <div class="form-group row">
                            <label class="col-sm-3 control-label">Goal: </label>
                            <div class="col-sm-7">
                                @Html.TextAreaFor(model => model.ClassGoals.FullDescription, new { @class = "form-control" })
                            </div>
                        </div>

                        <!--Date Assigned Field -->
                        <div class="form-group row">
                            <label class="col-sm-3 control-label">Date Assigned: </label>
                            <div class="col-sm-7">
                                @Html.EditorFor(model => model.ClassGoals.DateAdded, new { @class = "form-control", @type = "date" })
                            </div>
                        </div>

                        <!--Deadline Field EDITABLE (NOT FUNCTIONABLE)-->
                        <div class="form-group row">
                            <label class="col-sm-3 control-label">Deadline: </label>
                            <div class="col-sm-7">
                                @Html.EditorFor(model => model.ClassGoals.DeadlineDate, new { @class = "form-control", @type = "date" })
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <!-- Submit Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                        </div>
                    </div>
                </section>
            }
            <!--===================================================-->
            <!--End Horizontal Form-->
        </div>
    </div>
</div>
@section Scripts {

}
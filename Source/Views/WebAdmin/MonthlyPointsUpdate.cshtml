@model Source.Models.MonthlyPointsModel
@{
    ViewBag.Title = "MonthlyPointsUpdate";
    Layout = "~/Views/Shared/_WebAdminLayout.cshtml";
}

@using (Html.BeginForm("MonthlyPointsUpdate", "WebAdmin", FormMethod.Post))
{
    @Html.HiddenFor(model => Model.Month)
    <div class="container containter-fluid">
        <section class="form-horizontal">
            <div class="panel">
                <div class="panel-heading">
                    <h4 style="padding-left: 20px;">Update Total</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <h4>@Model.Month</h4>
                        </div>
                    </div>  
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextAreaFor(model => Model.Total)
                        </div>
                        <br />
                        <button>Update</button>
                    </div>
                </div>
            </div>
        </section>
    </div>
}



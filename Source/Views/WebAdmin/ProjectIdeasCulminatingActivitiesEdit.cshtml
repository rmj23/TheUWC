@model Source.Models.ProjectIdeasCulminatingActivitiesInsertViewModel
@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_WebAdminLayout.cshtml";
}
@using (Html.BeginForm("ProjectIdeasCulminatingActivitiesEdit", "WebAdmin", FormMethod.Post))
{
    <h2>@ViewBag.Title</h2>
    <div class="container-fluid">
        @Html.HiddenFor(m => Model.PICAModel.ID)
        @Html.HiddenFor(m => Model.PICAModel.Type)
        <div class="card">
            <div class="card-heading">
                <div class="card-title">
                    @ViewBag.Title
                </div>
            </div>

            <section class="form-horizontal">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model => Model.PICAModel.Title, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => Model.PICAModel.Title, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.PICAModel.GradeLevels, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6">
                            @Html.DropDownListFor(model => Model.PICAModel.GradeLevelRangeID, Model.GradeLevels, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.PICAModel.Idea, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6">
                            @Html.TextAreaFor(model => Model.PICAModel.Idea, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => Model.PICAModel.Keywords, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => Model.PICAModel.Keywords, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button id="submitBtn" class="btn btn-default">Update</button>
                    </div>
                </div>
            </section>
        </div>
    </div>


}

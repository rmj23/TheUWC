@model Source.Models.MonthlyPointsContestantsViewModel
@{
    ViewBag.Title = "MonthlyPointsContestants";
    Layout = "~/Views/Shared/_WebAdminLayout.cshtml";
}
<div class="container container-fluid">
    <div class="panel">
        <div class="panel-header">
            <h2 style="margin-left: 20px;">Contestants</h2>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Contestants)
                    {
                        <tr>
                            <td>@user.LastName</td>
                            <td>@user.FirstName</td>
                            <td>@user.Email</td>
                        </tr>
                    }                    
                </tbody>
            </table>
            <div class="col-md-12 center">
                <button>@Html.ActionLink("Select Winners!", "MonthlyWinners")</button>
            </div>
        </div>
    </div>
</div>


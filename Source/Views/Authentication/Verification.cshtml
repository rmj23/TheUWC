@model Source.Models.ValidationModel
@{
    ViewBag.Title = "Verification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title">
    <h1 class="page-header text-overflow">Verification</h1>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->
<!-- Main Content -->
<div id="page-content">
    <div class="container">
        @using (Html.BeginForm("Verification", "Authentication", FormMethod.Post))
        {

            <!-- Panel-->
            <div class="card">
                <!-- Panel Heading -->
                <div class="card-header">
                    <p class="text-center">You are not verified, please check your email for a confirmation code or enter the code below.</p>
                    <h3 class="card-title">Enter Code:</h3>
                </div>

                <!-- Panel Body-->
                <div class="card-body">
                    <!--Form Component-->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, "Email", new { @class = "col-sm-3 control-label", @style="margin-top:20px;"})
                        <div class="col-sm-9" style="margin-top:20px;">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.VerificationCode, "Verification Code", new { @class = "col-sm-3 control-label", style="margin-top:20px;" })
                        <div class="col-sm-9" style="margin-top:20px;">
                            @Html.TextBoxFor(model => model.VerificationCode, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-success" style="margin-top:20px; margin-bottom:50px;">Submit</button>
                </div>
            </div>
        }
    </div>
</div>
@model Source.Models.PasswordUpdateModel
@{
    ViewBag.Title = "Change";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BREADCRUMBS -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title pull-left">CHANGE PASSWORD</h1>
        <h1 class="page-title" , align="center">The Universal Writing Continuum</h1>
    </div>
</div>
<!-- END BREADCRUMBS -->
<!-- PAGE CONTENT -->
<div class="page-content">
    <div class="container">

        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                @if (ViewBag.Tried)
                {
                    if (!ViewBag.Successful)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <strong>Oh snap!</strong> An error occurred while processing your request.
                        </div>
                    }
                }

                @using (Html.BeginForm("PasswordChange", "Authentication", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <!--Horizontal Form-->
                    <!--===================================================-->
                    <section class="form-horizontal">
                        <section class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Password Form <a href=""></a> </h3>
                            </div><div class="panel-body">

                                <!-- Email Field -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Username, "Email", new { @class = "col-sm-4 control-label", @for = "email" })
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Email" })
                                        @Html.ValidationMessageFor(model => model.Username)
                                    </div>
                                </div>

                                <!-- Password Field -->
                                @*<div class="form-group">
                                    @Html.LabelFor(model => model.Password, "Password", new { @class = "col-sm-4 control-label", @for = "password" })
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>*@
                                <!-- New Password Field -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NewPassword, "New Password", new { @class = "col-sm-4 control-label", @for = "password" })
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                                        @Html.ValidationMessageFor(model => model.NewPassword)
                                    </div>
                                </div>
                                <!-- Confirm New Password Field -->
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ConfirmPassword, "Confrim New Password", new { @class = "col-sm-4 control-label", @for = "password" })
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm New Password" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                    </div>
                                </div>

                                <!-- Passes Return Url To model -->
                                @*@Html.HiddenFor(model => model.ReturnUrl, new { Value = Request.QueryString["ReturnUrl"] })*@

                            </div>
                            <div class="panel-footer">
                                <!-- Submit Button -->
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-default">Change Password</button>
                                </div>
                            </div>
                        </section>
                    </section>
                    <!--===================================================-->
                    <!--End Horizontal Form-->
                }

            </div>
        </div>
    </div>
</div>


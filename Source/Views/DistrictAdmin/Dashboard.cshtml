@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_DistrictAdminLayout.cshtml";
}



@section Styles {
    <!-- Footable CSS -->
    <link href="@Url.Content("~/Bundles/Footable/css/footable.core.css")" rel="stylesheet" />

    <!-- Animate CSS -->
    <link href="@Url.Content("~/Bundles/AnimateCSS/css/animate.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {

    <!-- Footable JS -->
    <script src="@Url.Content("~/Bundles/Footable/js/footable.all.min.js")"></script>
    
    <!-- Dashboard Header Height Adjustment-->
    <script src="@Url.Content("~/Scripts/Shared/DashboardHeight.js")" type="text/javascript"> </script>
}
<!--Page Title-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div id="page-title" class="hidden">
    <h1 class="page-header text-overflow">Dashboard</h1>
</div>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--End page title-->
<!-- Main Content -->
<div id="page-content">

    <!-- Shortcut Items -->
    <div class="row">

        <!-- Item: Evaluate Writing -->
        <div class="col-sm-3">
            <!--Tile-->
            <!--===================================================-->
            <a href="@Url.Action("DistrictRoster", "DistrictAdmin")">
                <div class="panel">
                    <div class="panel-body text-center bg-blueTradewind"></div>
                    <div class="pad-all text-center dashHeader">
                        <p class="h2 text-thin mar-no dashText">District Roster</p>
                    </div>
                </div>
                <!--===================================================-->
            </a>
        </div>

        <!-- Item: Student Data -->
        <div class="col-sm-3">
            <!--Tile-->
            <!--===================================================-->
            <a href="@Url.Action("BenchmarkReports", "DistrictAdmin")">
                <div class="panel">
                    <div class="panel-body text-center bg-yellowFuel"></div>
                    <div class="pad-all text-center dashHeader">
                        <p class="h2 text-thin mar-no dashText">Reports</p>
                    </div>
                </div>
                <!--===================================================-->
            </a>
        </div>

        <!-- Item: Engagements -->
        <div class="col-sm-3">

            <!--Tile-->
            <!--===================================================-->
            <a href="@Url.Action("Frequently Asked Questions.pdf", "Content/Teacher/Resources")" target="_blank">
                <div class="panel">
                    <div class="panel-body text-center bg-blueBluemine"></div>
                    <div class="pad-all text-center dashHeader">
                        <p class="h2 text-thin mar-no dashText">FAQ</p>
                    </div>
                </div>
                <!--===================================================-->
            </a>
        </div>

        <!-- Item: Admin Forum -->
        <div class="col-sm-3">
            <!--Tile-->
            <!--===================================================-->
            <a href="javascript:void(0);" onclick="alert('Feature coming soon!');">
                <div class="panel">
                    <div class="panel-body text-center bg-greenJewel"></div>
                    <div class="pad-all text-center dashHeader">
                        <p class="h2 text-thin mar-no dashText">Admin Forum</p>
                    </div>
                </div>
                <!--===================================================-->
            </a>
        </div>

    </div>
    <!--Horizontal Form-->
    <!--===================================================-->
    <!--Admin Sliders-->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">                
                <div class="panel-body">
                    @{int dayInt = DateTime.Now.Day % 4;
                        switch (dayInt)
                        {
                            case 0:
                                <img src="~/Images/Admin_Sliders/Slider_1.jpg"
                                     style="max-height: 100%; max-width: 100%" />
                                break;
                            case 1:
                                <img src="~/Images/Admin_Sliders/Slider_2.jpg"
                                     style="max-height: 100%; max-width: 100%" />
                                break;
                            case 2:
                                <img src="~/Images/Admin_Sliders/Slider_4.jpg"
                                     style="max-height: 100%; max-width: 100%" />
                                break;
                            case 3:
                                <img src="~/Images/Admin_Sliders/Slider_8.jpg"
                                     style="max-height: 100%; max-width: 100%" />
                                break;

                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <!--=============================================-->
</div>

<!--Quote of the day-->
<div class="alert alert-greenJewel alert-bottom-right animated fadeInRight">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p>
        <i class="fa fa-quote-left"></i> <strong>Quote of the Day </strong>
    </p>
    <p style="padding: 0 15px;">@Source.Models.QuoteModelDb.SelectDailyQuotes().Description.ToString()</p>
    <p class="text-right">
        - <strong>@Source.Models.QuoteModelDb.SelectDailyQuotes().Author.ToString()</strong>
    </p>
</div>
